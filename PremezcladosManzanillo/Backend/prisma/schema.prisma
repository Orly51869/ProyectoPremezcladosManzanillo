
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// Simplified User model.
// The 'id' should correspond to the 'sub' claim from the Auth0 JWT token.
model User {
  id    String @id
  email String @unique
  name  String?

